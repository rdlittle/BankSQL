    <children>
        <TreeTableView fx:id="table" editable="true" minWidth="-Infinity" prefHeight="656.0" prefWidth="1325.0">
            <columns>
                <TreeTableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
