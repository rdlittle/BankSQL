                    <children>
                        <Button fx:id="btnOk" mnemonicParsing="false" onAction="#onAdd" prefHeight="18.0" prefWidth="57.0" text="Add" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" text="Delete" />
                    </children>
                </HBox>
         </children>
      </AnchorPane>      
    </children>
</Pane>
